html
    head
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="https://code.jquery.com/jquery-3.3.1.min.js")
        title= title
    body
        h1= message
        form(action="http://localhost:8081/file_upload", method="post" enctype="multipart/form-data")
            input.input(type="text", name="name", style="color:red")             
            input.input#file(type="file", name="file")
            img#image(src="https://dgaps.com/images/default-image.png", width=100, height=100)
            input(type="submit", value="Upload")
        script(type='text/javascript').
            $('#file').change(function(event) {
                $('#image').attr('src',URL.createObjectURL(event.target.files[0]))
            })
